<Window x:Class="FMDC.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMDC.TestApp"
		mc:Ignorable="d"
        Title="Forbidden Memories Duel Companion" Height="800" Width="1200">

	<Grid Background="Gray">
		<Grid.RowDefinitions>
			<RowDefinition Height="22"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="85*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="15*"/>
			<ColumnDefinition Width="83*"/>
		</Grid.ColumnDefinitions>

		<Menu Grid.ColumnSpan="3">
			<MenuItem Header="File">
			</MenuItem>
		</Menu>

		<TextBlock Text="Play Optimizer" Grid.Column="1" Grid.Row="1"
			VerticalAlignment="Bottom" Padding="10,0,0,10" FontSize="24" FontWeight="Bold"/>

		<Frame Source="Pages/PlayOptimizer.xaml" Grid.Row="2" Grid.Column="1" />
	</Grid>
</Window>
